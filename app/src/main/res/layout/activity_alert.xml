<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bak"
    tools:context="com.example.cosain.cres.Alert">

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fire"
        android:onClick="emergencyAlert"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="85dp"
        android:layout_above="@+id/button6"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_marginBottom="55dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="earthquake"
        android:onClick="earthquakeAlert"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="177dp"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tsunami"
        android:onClick="tsunamiAlert"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="277dp"
        android:layout_marginLeft="135dp"
        android:layout_marginStart="135dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
